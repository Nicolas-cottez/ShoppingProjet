    </padding>

    <TableView fx:id="panierTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colNom" text="Article" prefWidth="200"/>
            <TableColumn fx:id="colQuantite" text="QuantitÃ©" prefWidth="100"/>
