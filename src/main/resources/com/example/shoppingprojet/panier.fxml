            <TableColumn fx:id="colPrixTotal" text="Prix Total" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="center">
        <Button fx:id="retourButton" text="Retour Boutique" prefWidth="150"/>
        <Button fx:id="validerButton" text="Valider Commande" prefWidth="150"/>
    </HBox>

</VBox>
