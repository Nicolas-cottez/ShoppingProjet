      fx:controller="com.example.shoppingprojet.Controleur.ClientAccueilController"
      alignment="center"
      spacing="20.0">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Bienvenue Client !" style="-fx-font-size: 28px;" />
    <Button fx:id="catalogueButton" text="Voir le Catalogue" prefWidth="200"/>
    <Button fx:id="panierButton" text="Voir mon Panier" prefWidth="200"/>
    <Button fx:id="commandesButton" text="Mes Commandes" prefWidth="200"/>
</VBox>




