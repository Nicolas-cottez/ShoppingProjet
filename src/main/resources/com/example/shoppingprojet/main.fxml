<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.shoppingprojet.Controleur.MainController">

    <top>
        <MenuBar>
            <Menu text="Navigation">
                <items>
                    <MenuItem text="Boutique"    onAction="#showBoutique"/>
                    <MenuItem text="Mon Panier"  onAction="#showPanier"/>
                    <MenuItem text="Historique"  onAction="#showHistorique"/>
                </items>
            </Menu>
            <Menu text="Compte">
                <items>
                    <MenuItem text="Déconnexion" onAction="#handleLogout"/>
                </items>
            </Menu>
        </MenuBar>
    </top>

    <!-- c’est ici qu’on injecte les vues -->
    <!-- soit tu remplaces tout le center -->
    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>

</BorderPane>
