<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.shoppingprojet.Controleur.BoutiqueController">
    <children>
        <VBox AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
              spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Boutique de la Plage 🏖️"
                   style="-fx-font-size:24px; -fx-font-weight:bold;"/>
            <TableView fx:id="tableArticles" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colNom"         text="Nom"         prefWidth="150"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="colPrix"        text="Prix (€)"    prefWidth="100"/>
                    <TableColumn fx:id="colStock"       text="Stock"       prefWidth="100"/>
                    <TableColumn fx:id="colMarque"      text="Marque"      prefWidth="150"/>
                    <TableColumn fx:id="colAction"      text="Action"      prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
