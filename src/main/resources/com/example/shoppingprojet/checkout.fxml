<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.shoppingprojet.Controleur.CheckoutController">
    <children>
        <VBox AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" spacing="15">
            <HBox spacing="10">
                <Button fx:id="annulerButton"   text="← Annuler" />
                <Button fx:id="confirmerButton" text="Confirmer la commande" />
            </HBox>
            <VBox spacing="8">
                <Label text="Adresse de livraison :" />
                <TextArea fx:id="livraisonField" prefRowCount="3"/>
                <Label text="Adresse de facturation :" />
                <TextArea fx:id="facturationField" prefRowCount="3"/>
                <Label text="Moyen de paiement :" />
                <ComboBox fx:id="paiementBox" promptText="Sélectionner un moyen"/>
                <!-- HBox qui regroupe les champs CB -->
                <HBox fx:id="cbBox" spacing="10"  style="-fx-background-color:#f0f0f0;">
                    <VBox spacing="4">
                        <Label text="Numéro de carte :" />
                        <TextField fx:id="cardNumberField"/>
                    </VBox>
                    <VBox spacing="4">
                        <Label text="Date d'expiration (MM/AA) :" />
                        <TextField fx:id="expField"/>
                    </VBox>
                    <VBox spacing="4">
                        <Label text="CVV :" />
                        <TextField fx:id="cvvField"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
